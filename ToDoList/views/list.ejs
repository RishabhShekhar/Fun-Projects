<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= kindOfDay %></h1>
    </div>

    
    <div class="box">
        <% for(let i = 0; i<newitems.length;i++){ %>
            <div class="item">
                <input type="checkbox">
                <p><%= newitems[i] %></p>
            </div>
        <% } %>

        <form class= "item" action="/" method="post">
            <input type="text" name="item" placeholder="Enter task" autocomplete="off">
            <button type="submit" name="button" value= <%= buttontitle %>>+</button>
        </form>
    </div>

<%- include("footer") -%>
